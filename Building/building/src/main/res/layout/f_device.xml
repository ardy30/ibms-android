<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/ly_area"
            android:layout_width="0dp"
            android:layout_height="@dimen/width60"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="选择区域" />
        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/width60"
            android:background="#eee">

        </View>

        <RelativeLayout
            android:id="@+id/ly_devicetype"

            android:layout_width="0dp"
            android:layout_height="@dimen/width60"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_device_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="选择设备类型" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#eee">

    </View>

    <TextView
        android:id="@+id/net"
        style="@style/text_15_464646"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16px"
        android:background="#FFC0CB"
        android:gravity="center"
        android:text="@string/net_bad"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/width60"
            android:layout_weight="1" />

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/width60"
            android:background="#000">

        </View>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="@dimen/width60"
            android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </ListView>
</LinearLayout>