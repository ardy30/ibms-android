<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/ly_area"
            android:layout_width="0dp"
            android:layout_height="@dimen/width60"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_area"
                android:layout_width="fill_parent"
                android:layout_marginLeft="@dimen/width10"
                android:layout_marginRight="@dimen/width10"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/width14"
                android:textColor="@drawable/tab_home_font_style"
                android:ellipsize="end"
                android:singleLine="true"

                android:text="选择区域" />
            <ImageView
                android:id="@+id/iv_area_array"
                android:layout_width="@dimen/width30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/width30"
                android:layout_marginRight="@dimen/width15"
                android:background="@drawable/device_array_sel"/>

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/width60"
            android:background="#eee">

        </View>

        <RelativeLayout
            android:id="@+id/ly_devicetype"

            android:layout_width="0dp"
            android:layout_height="@dimen/width60"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_device_type"
                android:layout_width="fill_parent"
                android:layout_marginLeft="@dimen/width10"
                android:layout_marginRight="@dimen/width10"
                android:gravity="center"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/width14"
                android:textColor="@drawable/tab_home_font_style"
                android:text="选择设备类型" />
            <ImageView
                android:id="@+id/iv_type_array"
                android:layout_width="@dimen/width30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/width30"
                android:layout_marginRight="@dimen/width15"
                android:background="@drawable/device_array_sel"/>
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#eee">

    </View>

    <TextView
        android:id="@+id/net"
        style="@style/text_15_464646"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16px"
        android:background="#FFC0CB"
        android:gravity="center"
        android:text="@string/net_bad"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/width60"
            android:layout_weight="1" />

        <View
            android:layout_width="1px"
            android:layout_height="@dimen/width60"
            android:background="#000">

        </View>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="@dimen/width60"
            android:layout_weight="1" />
    </LinearLayout>

<com.handmark.pulltorefresh.library.PullToRefreshListView

    android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
</com.handmark.pulltorefresh.library.PullToRefreshListView>
</LinearLayout>