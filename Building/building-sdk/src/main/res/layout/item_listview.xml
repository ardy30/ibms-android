<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center_vertical"
    android:id="@+id/layout"
    android:orientation="horizontal"
    android:padding="@dimen/width8"
    >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/width40"
        android:layout_height="@dimen/width40"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/width24"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width25"
        style="@style/text_15_464646"
        android:layout_gravity="center"
        android:singleLine="true"
        android:gravity="left|center_vertical"
        android:text="设备名称"/>

</LinearLayout>