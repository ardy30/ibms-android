<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/action_bar_title" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/width40">

        <EditText
            android:id="@+id/message"
            android:layout_width="@dimen/width228"
            android:layout_height="@dimen/width43"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:hint="推送消息"
            android:nextFocusForward="@+id/edit_login_password"
            android:paddingRight="@dimen/width18"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="@dimen/textsize15" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>