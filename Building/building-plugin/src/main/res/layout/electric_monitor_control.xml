    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/action_bar_title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/width75"
        android:background="#fff">

        <ImageView
            android:id="@+id/image_icon_account"
            android:layout_width="@dimen/width35"
            android:layout_height="@dimen/width35"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width20"
            android:background="@drawable/account_icon" />

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width30"
            android:layout_toRightOf="@id/image_icon_account"
            android:text="@string/account_main"
            android:textColor="@color/home_font_color"
            android:textSize="@dimen/textsize16" />

        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width5"
            android:layout_toRightOf="@+id/account_name"
            android:text="7777@qq.com"
            android:textColor="@color/home_font_color" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#e5e5e5" />

        <ImageView
            android:layout_width="@dimen/width25"
            android:layout_height="@dimen/width25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/width11"
            android:background="@drawable/array_right_defalult" />
    </RelativeLayout>
