    <RelativeLayout
        android:id="@+id/about_app"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/width50"
        android:background="#fff">

        <ImageView
            android:id="@+id/image_link"
            android:layout_width="@dimen/width45"
            android:layout_height="@dimen/width45"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width16"
            android:background="@drawable/set_about" />

        <TextView
            style="@style/text_15_464646"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/width25"
